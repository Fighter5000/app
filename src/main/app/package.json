{
  "name": "io.cordova.hellocordova",
  "displayName": "HelloCordova",
  "version": "1.0.0",
  "description": "A sample Apache Cordova application that responds to the deviceready event.",
  "main": "index.js",
  "scripts": {
    "preview": "npm run dist && cordova run browser",
    "test": "npm run dist &&  mocha --timeout 1000000000",
    "sass": "sass --no-source-map --style=compressed www/scss:www/dist",
    "dist": "npm run uncompressed && npm run sass",
    "uncompressed": "browserify --standalone unverpackt-programmieren www/js/unverpackt.js -o www/dist/unverpackt.js"
  },
  "keywords": [
    "ecosystem:cordova"
  ],
  "author": "Apache Cordova Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "browserify": "^17.0.0",
    "chai": "^4.3.6",
    "cordova-android": "^10.1.2",
    "cordova-browser": "^6.0.0",
    "cordova-plugin-file": "^7.0.0",
    "cordova-plugin-whitelist": "^1.3.4",
    "cordova-sqlite-storage": "^6.0.0",
    "lodash": "^4.17.21",
    "mocha": "^10.0.0",
    "puppeteer": "^13.7.0",
    "sass": "^1.51.0",
    "tree-kill": "^1.2.2"
  },
  "cordova": {
    "platforms": [
      "android",
      "browser"
    ],
    "plugins": {
      "cordova-plugin-file": {
        "ANDROIDX_WEBKIT_VERSION": "1.4.0"
      },
      "cordova-sqlite-storage": {},
      "cordova-plugin-whitelist": {}
    }
  },
  "dependencies": {
    "superagent": "^7.1.2",
    "tributejs": "^5.1.3"
  }
}